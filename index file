        <h2>üéâ YES! üéâ</h2>
        <div class="hearts">‚ù§Ô∏è üíï ‚ù§Ô∏è</div>
        <img id="couplePhoto" src="couple.jpg" alt="Us Together" onerror="this.src='https://via.placeholder.com/300?text=Our+Love'">
        <div class="hearts">‚ù§Ô∏è üíï ‚ù§Ô∏è</div>
        <h2 style="margin-top: 20px; font-size: 2em;">Forever Yours! üíë</h2>
    </div>

    <script>
        let noCount = 0;
        const messages = [
            'ü•∫ Please...',
            'üò§ Konruven?',
            'üòé Mariyathya accept panu!'
        ];

        const popup = document.getElementById('popup');
        const overlay = document.getElementById('overlay');
        const celebration = document.getElementById('celebration');

        function createFloatingHearts() {
            for (let i = 0; i < 10; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.className = 'floating-heart';
                    heart.innerHTML = '‚ù§Ô∏è';
                    heart.style.left = Math.random() * window.innerWidth + 'px';
                    heart.style.top = window.innerHeight + 'px';
                    document.body.appendChild(heart);
                    setTimeout(() => heart.remove(), 3000);
                }, i * 100);
            }
        }

        document.getElementById('yesBtn').onclick = function() {
            celebration.style.display = 'flex';
            createFloatingHearts();
        };

        document.getElementById('noBtn').onclick = function() {
            if (noCount < messages.length) {
                popup.innerHTML = messages[noCount];
                popup.style.display = 'block';
                overlay.style.display = 'block';
                noCount++;
            }
        };

        overlay.onclick = function() {
            popup.style.display = 'none';
            overlay.style.display = 'none';
        };
    </script>
